<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_foreground_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="我是ForegroundSpan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_background_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是BackgroundSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_foreground_span" />

    <TextView
        android:id="@+id/tv_relative_size_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是RelativeSizeSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_background_span" />

    <TextView
        android:id="@+id/tv_strikethrough_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是StrikethroughSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_relative_size_span" />

    <TextView
        android:id="@+id/tv_underline_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是UnderlineSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_strikethrough_span" />


    <TextView
        android:id="@+id/tv_super_script_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是SuperscriptSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_underline_span" />

    <TextView
        android:id="@+id/tv_subscript_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是SubscriptSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_super_script_span" />

    <TextView
        android:id="@+id/tv_style_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是StyleSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_subscript_span" />

    <TextView
        android:id="@+id/tv_image_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是ImageSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_style_span" />

    <TextView
        android:id="@+id/tv_clickable_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是ClickableSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_image_span" />

    <TextView
        android:id="@+id/tv_url_span"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我是URLSpan"
        app:layout_constraintTop_toBottomOf="@id/tv_clickable_span" />

</androidx.constraintlayout.widget.ConstraintLayout>